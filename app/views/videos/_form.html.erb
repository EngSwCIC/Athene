<div class="mx-auto login-form text-center" style="padding-top: 170px; width: 350px">
  <div class="form-control">
  <h2 class="text-center"> UPLOAD DE VÍDEO </h2>
  <div class="field">
    <%= form.text_field :title, id: 'titulo', placeholder: "Título do vídeo", :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.text_area :description, placeholder: "Descrição do vídeo", :class => "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :arq_video, "Selecione o arquivo do vídeo:"%>
