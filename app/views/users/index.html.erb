<table class="table table-info">
  <thead><h1>USUÁRIOS</h1>
    <tr>
      <th scope="col">Nick</th>
      <th scope="col">Senha</th>
      <th scope="col">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.nick %></td>
      <td><%= user.senha %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'MOSTRAR', user %></td>
      <td><%= link_to 'EDITAR', edit_user_path(user) %></td>
      <td><%= link_to 'EXCLUIR', user, method: :delete, data: { confirm: 'VOCÊ TEM CERTEZA QUE DESEJA EXCLUIR?' } %></td>
    </tr>
    <% end %>
  </tbody>
        <div class="btn-lg  col-md-3"> 
        <p> <%= link_to 'NOVO USUÁRIO', new_user_path %> </p>
      </div>
</table>
